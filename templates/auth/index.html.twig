{% extends 'base.html.twig' %}

{% block title %}Automate your standups and daily reports{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .disabled_button {
            filter: grayscale(80%);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="w-full h-fullVh flex justify-center items-center">
        <div class="flex flex-col text-center">
            <h3 class="text-xl text-gray-500 font-bold">Get started</h3>
            <div class="w-full flex mt-4 space-x-6">
                {% for alt,service in services %}
                    {% if service.route is not null %}
                        <a href="{{ path(service.route) }}">
                            <img alt="{{ alt }}" class="mt-2 cursor-pointer" src="{{ asset(service.image) }}" />
                        </a>
                    {% else %}
                        <img alt="{{ alt }}" class="mt-2 disabled_button" src="{{ asset(service.image) }}" />
                    {% endif %}

                {% endfor %}
            </div>

        </div>
    </div>
{% endblock %}


{% block javascripts %}{% endblock %}